<div class="container" style="height: 90vh;">
    <!-- Jumbotron Header -->
    <header class="jumbotron my-4">
        <h1 class="display-3">Welcome ShareTrippers!</h1>
        <p class="lead">SharedTripp is the best way to road across the country. <br> Find yours SharedTripp's
            buddies, when you share with us yours tripp plans and let the exploration begin!</p>
        <a href="/offerTrip" class="btn btn-primary btn-lg">Offer Tripp!</a>
    </header>

    <!-- Page Features -->
    <div class="row text-center">
        {{#each tripps}}
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="{{carImage}}" alt="Car Image">
                <div class="card-body">
                    <h4 class="card-title">{{startingPoint}} - {{endPoint}}</h4>
                </div>
                <div class="card-footer">
                    <a href="/tripDetails/{{_id}}" class="btn btn-primary">Find Out More!</a>
                </div>
            </div>
        </div>
        {{else}}

        <div style="width: 100%;">
            <img style="max-width: 500px;"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTAKZybmICh9ulYN7sNzgk8MFOUd2hXls2YYkdo44r3dzjes6fWJg&s" />
            <p class="lead" style=" width: 100%; text-align: center; font-size: 22px; font-style: italic;">
                Hitchhiker time...</p>
        </div>

        {{/each}}
    </div>
    <!-- /.row -->

</div>