{{#if isAdmin}}
<div class="row">
    <div class="col text-center">
        <a href="/create"><button type="button" class="btn btn-primary btn-lg">Create Course</button></a>
    </div>
</div>


<div class="border border-light p-5">
    <h1 class="text-center">Choose Course</h1>
    <ul class="list-group">
        {{#each courses}}
        <li class="list-group-item">
            {{this.title}}
            <div class="float-right">
                <div class="btn-group" role="group">
                    <a href="/edit/{{this._id}}"><button type="button" class="btn btn-warning">Edit Course</button></a>
                    <a href="/addlecture/{{this._id}}"><button type="button" class="btn btn-success">Add
                            lectures</button></a>
                </div>
                Lectures in course
                <span class="badge badge-primary badge-pill">{{this.countLectures}}</span>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
{{else}}
<h1 class="text-center">Courses</h1>
<form class="search" action="/all-courses" method="POST">
    <label>Search: </label>
    <input type="text" name="search">
    <input type="submit" value="Search">
</form>
<div class="container mt-3">
    <div class="row ">
        <div class="card-deck d-flex justify-content-center">
            {{#each courses}}
            <div class="card mb-4">
                <img class="card-img-top" src="{{this.imageUrl}}" alt="Card image cap" width="400">
                <div class="card-body">
                    <h4 class="card-title">{{this.title}}</h4>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <div class="card-footer">
                    <a href="/details/{{this._id}}"><button type="button" class="btn btn-info">Details</button></a>
                </div>
            </div>
            {{/each}}
