<div class="container">
    <h1 class="my-4">Course title : {{course.title}}
    </h1>

    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src={{course.imageUrl}} alt="{{course.title}}" />
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{course.description}}</p>
            {{#if isEnroll}}
            <span class="badge badge-pill badge-success">enrolled</span>
            {{else}}
            <form id="enroll-form" action="/enroll/{{course._id}}" method="POST">
                <a href="javascript:document.getElementById('enroll-form').submit()"><button type="button"
                        class="btn btn-info">Enroll</button></a>
            </form>
            {{/if}}
        </div>
    </div>

    {{#if isEnroll}}

    <h3 class="text-center">Lectures List</h3>

    <ul class="list-group">
        {{#each course.lectures}}
        <li class="list-group-item">
            <h5 class="mb-1">{{title}}</h5>
            <span class="float-right">
                <a href="/play-video/{{_id}}"><button class="btn btn-secondary">Play</button></a>
            </span>
        </li>
        {{/each}}




