<form class="text-center border border-light p-5" action="/addlecture/{{course._id}}" method="POST">
    <h1>Add lecture to course {{course.title}}</h1>

    <div class="form-group">
        <label for="title">Lecture Title</label>
        <input type="text" class="form-control" placeholder="Lecture title" name="title" value="{{title}}">
    </div>
    <div class="form-group">
        <label for="videoUrl">Video Url</label>
        <input type="text" class="form-control" placeholder="Video Url" name="videoUrl" value="{{videoUrl}}">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<h2 class="text-center">There are {{course.countLectures}} lectures in this course</h2>

<ul class="list-group">
    {{#each course.lectures}}
    <li class="list-group-item">
        <h5 class="mb-1">{{this.title}}</h5>
        <span class="float-right">
            <a href="/lectureDelete/{{this._id}}"><button class="btn btn-danger">Delete</button></a>
        </span>
    </li>
    {{/each}}
</ul>
</main>