<form class="text-center border border-light p-5" action="/edit/{{this._id}}" method="POST">
    <h1>Edit Course</h1>
    <div class="form-group">
        <label for="title">Course Title</label>
        <input type="text" class="form-control" placeholder="Course name" name="title" value={{this.title}}>
    </div>
    <div class="form-group">
        <label for="description">Course Description</label>
        <textarea class="form-control" placeholder="Description" name="description">{{this.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" value="{{this.imageUrl}}" name="imageUrl">
    </div>
    <div class="form-check">
        {{#if this.isPublic}}
        <input type="checkbox" class="form-check-input" name="isPublic" id="check-box" checked>
        {{else}}
        <input type="checkbox" class="form-check-input" name="isPublic" id="check-box">
        {{/if}}
        <label class="form-check-label" for="check-box">Public</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>