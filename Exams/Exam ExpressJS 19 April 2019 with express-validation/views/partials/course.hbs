<div class="card mb-4">
  <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
  <div class="card-body">
    <h4 class="card-title">{{title}}</h4>
  </div>

  {{#if isLoggedIn}}
  <div class="card-footer">
    <a href="/course/details/{{id}}"><button type="button" class="btn btn-info">Details</button></a>
    {{#moment createdAt}}
    <small class="float-right">{{this}}</small>
    {{/moment}}
    {{!-- <small class="float-right">{{createdAt}}</small> --}}
  </div>
  {{/if}}

</div>